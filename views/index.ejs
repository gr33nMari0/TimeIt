<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TimeIt!</title>
    <link rel="stylesheet" href="/smallTimers.css">
</head>

<body>
    <div class="popups popupHidden">
        <div class="newTimerPopup">
            <h2>Add a New Timer</h2>
            <label for="newTimerTitle">Countdown Timer Name</label>
            <input type="text" name="newTimerTitle" id="newTimerTitle">
            <label for="newTimerDesc">Description</label>
            <input type="text" name="newTimerDesc" id="newTimerDesc">
            <label for="newTimerDueDate">Due Date</label>
            <input type="text" name="newTimerDueDate" id="newTimerDueDate"
                placeholder="Month Day, Year Hour:Minute:Second">
            <button>Submit</button>
        </div>
    </div>

    <nav>
        <!-- <h1>It's the final countdown&#8482;</h1> -->
        <h1>TimeIt!</h1>
        <div>
            <svg id="plus" xmlns="http://www.w3.org/2000/svg" width="5" height="5" viewBox="0 0 52 52">
                <path
                    d="M26 0C11.664 0 0 11.663 0 26s11.664 26 26 26 26-11.663 26-26S40.336 0 26 0zm0 50C12.767 50 2 39.233 2 26S12.767 2 26 2s24 10.767 24 24-10.767 24-24 24z" />
                <path
                    d="M38.5 25H27V14c0-.553-.448-1-1-1s-1 .447-1 1v11H13.5c-.552 0-1 .447-1 1s.448 1 1 1H25v12c0 .553.448 1 1 1s1-.447 1-1V27h11.5c.552 0 1-.447 1-1s-.448-1-1-1z" />
            </svg>
        </div>
    </nav>
    <main class="container">
        <div class="timerGrid">
            <% timers.forEach((timer) => { %>
                <div class="timer">
                    <h3 class="timerTitle"><%= timer.title %></h3>
                    <p class="timerDescription"><%= timer.desc %></p>
                    <input type="text" name="dueDate" class="dueDate" value="<%= timer.dueDate %> "
                        style="display: none;">
                    <div class="timerCountdown">
                        <div class="days">000</div>
                        <span>:</span>
                        <div class="hours">00</div>
                        <span>:</span>
                        <div class="minutes">00</div>
                        <span>:</span>
                        <div class="seconds">00</div>
                    </div>
                </div> 
            <% }) %> 
            <div class="newTimer">
                <h3 class="timerTitle">Add a new Timer</h3>
                <svg id="plus" xmlns="http://www.w3.org/2000/svg" width="5" height="5" viewBox="0 0 52 52">
                    <path
                        d="M26 0C11.664 0 0 11.663 0 26s11.664 26 26 26 26-11.663 26-26S40.336 0 26 0zm0 50C12.767 50 2 39.233 2 26S12.767 2 26 2s24 10.767 24 24-10.767 24-24 24z" />
                    <path
                        d="M38.5 25H27V14c0-.553-.448-1-1-1s-1 .447-1 1v11H13.5c-.552 0-1 .447-1 1s.448 1 1 1H25v12c0 .553.448 1 1 1s1-.447 1-1V27h11.5c.552 0 1-.447 1-1s-.448-1-1-1z" />
                </svg>
            </div> 
        </div>
    </main>
    <footer>
        <h2>&copy; Peter Woodhead</h2>
    </footer>
    <script src="/countdown.js"></script>
</body>

</html>